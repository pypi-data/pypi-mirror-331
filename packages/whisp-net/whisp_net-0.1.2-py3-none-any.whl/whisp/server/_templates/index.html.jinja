<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{{ title }}</title>
    <!-- Bootstrap CSS for responsiveness -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"/>
</head>
<body>
<div class="container my-4">
    <header class="text-center mb-4">
        <h1>{{ title }}</h1>
    </header>
    <main>
        <section>
            <h2>Current Connections</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>SID</th>
                    </tr>
                    </thead>
                    <tbody id="connections-tbody">
                    {% for sid, connection in connections.items() %}
                        <tr>
                            <td>{{ connection.name or "N/A" }}</td>
                            <td>{{ connection.sid }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>

        <section>
            <h2>Messages</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Timestamp</th>
                        <th>Sender</th>
                        <th>Event</th>
                        <th>Data</th>
                    </tr>
                    </thead>
                    <tbody id="messages-tbody">
                    <!-- here will be the messages be shown -->
                    <tr><td colspan="2">No messages available.</td></tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>

<!-- Bootstrap Bundle with Popper for interactive components -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<!-- Custom JavaScript -->
<script src="{{ url_for('static', filename='whisp.js') }}"></script>
<script src="{{ url_for('static', filename='main.js') }}"></script>
</body>
</html>
