{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    // Causes inconsistent builds locally
    "incremental": false,
    // TODO(tooling): Remove once declarations with implicit any are typed
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
