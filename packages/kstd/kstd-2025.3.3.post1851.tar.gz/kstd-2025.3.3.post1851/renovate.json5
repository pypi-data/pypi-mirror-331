{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  enabled: true,
  extends: ["config:recommended"],
  ignoreDeps: [
    "python", // manually maintained
  ],
  lockFileMaintenance: {
    enabled: true,
    schedule: ["before 9am on the first day of the month"],
  },
  reviewers: ["kkom"],
  schedule: ["before 9am on the first day of the month"],
  prHourlyLimit: 0,
  prConcurrentLimit: 0,
  rangeStrategy: "pin",
  dependencyDashboard: true,
  dependencyDashboardOSVVulnerabilitySummary: "all",
  osvVulnerabilityAlerts: true,
  packageRules: [
    {
      matchDepNames: ["pyright", "ruff"],
      groupName: "Static analysis",
    },
    {
      matchDepNames: ["node", "pnpm"],
      groupName: "Node.js environment",
    },
    {
      matchDepNames: ["poethepoet", "toml-sort"],
      groupName: "Project tools",
    },
    {
      matchDepNames: ["more-itertools", "pytest", "pytest-asyncio"],
      groupName: "Testing tools",
    },
  ],
}
