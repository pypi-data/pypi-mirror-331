{
  "initializeCommand": "${localWorkspaceFolder}/init_host.sh", // executed on HOST system
  "image": "local/septentrio-gps",

  "runArgs": ["--network=host"],
  "overrideCommand": false,

  "mounts": [
    "source=/var/tmp/container-extensions,target=/home/dev/.vscode-server/extensions,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "gps_serial_port": "/tty/tty_nmea_rx",
    "GPS_NODE_TYPE": "ip",
    "GPS_IP_HOST": "localhost",
    "GPS_REF": "51.45716554, 6.08207121",
    "LOGLEVEL": "info"
  },

  // Features to add to the dev container. More info: https://containers.dev/implementors/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "./init_container.sh",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "shardulm94.trailing-spaces",
        "njpwerner.autodocstring",
        "mhutchie.git-graph",
        "doi.fileheadercomment",
        "donjayamanne.githistory",
        "charliermarsh.ruff"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
