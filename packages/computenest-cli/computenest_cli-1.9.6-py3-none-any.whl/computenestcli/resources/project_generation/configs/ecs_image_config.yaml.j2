Service:
  RegionId: {{ RegionId }}
  DeployType: ros
  OperationMetadata:
    StatusOperationConfigs:
      - TemplateName: ECS单机版
        SupportOperations:
          - Start
          - Stop
          - Restart
    SupportBackup: true
    ModifyParametersConfig:
      - TemplateName: ECS单机版
        Operation:
          - Name: 变更ECS实例规格
            Description: 变更ECS实例规格
            Type: Custom
            Parameters:
              - EcsInstanceType
          - Name: 变更ECS实例密码
            Description: 变更ECS实例密码
            Type: Custom
            Parameters:
              - InstancePassword
    {%- if CustomParameters | length > 0 and ArtifactSourceType == 'DockerCompose' %}
    ParameterConfigs:
      - TemplateName: {% if ServiceType == 'managed' %}'Template'{% else %}'ECS单机版'{% endif %}
        Parameters:
          {%- for item in CustomParameters %}
          {{ item.Name }}:
            Type: {{ item.Type }}
            {%- if item.Default %}
            Default: {{ item.Default }}
            {%- else %}
            Default: ''
            {%- endif %}
            {%- if item.Label %}
            Description: {{ item.Label }}
            {%- endif %}
            {%- if item.AllowedPattern %}
            AllowedPattern: {{ item.AllowedPattern }}
            {%- endif %}
            {%- if item.ConstraintDescription %}
            ConstraintDescription: {{ item.ConstraintDescription }}
            {%- endif %}
            {%- if item.MaxValue %}
            MaxValue: {{ item.MaxValue }}
            {%- endif %}
            {%- if item.MinValue %}
            MinValue: {{ item.MinValue }}
            {%- endif %}
            {%- if item.AllowedValues %}
            AllowedValues:
              {%- for value in item.AllowedValues %}
              - {{ value }}
              {%- endfor %}
            {%- endif %}
          {%- endfor %}
        Metadata:
           ParameterGroups:
             - Parameters:
                 {%- for item in CustomParameters %}
                 - {{ item.Name }}
                 {%- endfor %}
               DefaultEnvFilePath: ../{{ DockerComposeEnvPath }}
               Formatter: env
               Name: Default
    {%- endif %}
  DeployMetadata:
    {%- if ServiceType == 'managed' or ServiceType == 'private' or DockerComposeYamlPath %}
    SupplierDeployMetadata:
      {%- if ServiceType == 'managed' or ServiceType == 'private' %}
      {%- if ServiceType == 'managed' %}
      RoleName: {{ RoleName }}
      UserType: Aliyun
      {%- endif %}
      SupplierTemplateConfigs:
        - Name: ECS单机版
          Url: 'ros_templates/template.yaml'
          ArchitectureDiagramUrl: 'resources/architecture/architecture.jpg'
          AllowedRegions:
            - {{ ServiceBuildRegion }}
          {%- if ServiceType == 'managed' %}
          PredefinedParameters: []
          HiddenParameterKeys:
            - VpcId
            - VSwitchId
            - ZoneId
          ParameterMappings:
            - ParameterKey: RegionId
              ParameterMappingKeys:
                - VpcId
                - ZoneId
                - VSwitchId
              ParameterValueMapping:
                {{ ServiceBuildRegion }}:
                  Parameters:
                    VpcId: {{ VpcId }}
                    ZoneId: {{ ZoneId }}
                    VSwitchId: {{ VSwitchId }}
            {%- endif %}
        {%- endif %}
      {%- endif %}
      ArtifactRelation:
        ecs_image_{{ RepoName }}:
          ArtifactId: ${Artifact.EcsImage.ArtifactId}
          ArtifactVersion: draft
    TemplateConfigs:
      - Name: ECS单机版
        Url: 'ros_templates/template.yaml'
        ArchitectureDiagramUrl: 'resources/architecture/architecture.jpg'
        AllowedRegions:
          - {{ ServiceBuildRegion }}
  ServiceType: {{ ServiceType }}
  ServiceInfo:
    # 英文版可以再配置Locale为en-US的服务信息
    - Locale: zh-CN
      ShortDescription: demo
      Image: 'resources/icons/service_logo.png'
Artifact:
  EcsImage:
    ArtifactType: EcsImage
    ArtifactName: ecs_image_{{ RepoName }}
    Description: {{ RepoName }} EcsImage
    SupportRegionIds:
        - {{ ServiceBuildRegion }}
    ArtifactBuildProperty:
      CodeRepo:
        Platform: {{ Platform }}
        Owner: {{ Owner }}
        RepoName: {{ RepoFullName }}
        Branch: {{ Branch }}
      RegionId: ap-southeast-1
      CommandType: RunShellScript
      {%- if ImageId %}
      SourceImageId: {{ ImageId }}
      {%- endif %}
      CommandContent: |-
        {{ EcsImageBuilderCommandContent | indent(width=8, strip=True) }};
