    ('yellow', (255, 255, 0)),
    ('orange', (255, 165, 0)),
    ('purple', (128, 0, 128)),
    ('cyan', (0, 255, 255)),
    ('magenta', (255, 0, 255)),
    ('white', (255, 255, 255)),
    ('black', (0, 0, 0)),
    ('gray', (128, 128, 128)),
    ('brown', (165, 42, 42)),
    ('pink', (255, 192, 203)),
    ('violet', (238, 130, 238)),
