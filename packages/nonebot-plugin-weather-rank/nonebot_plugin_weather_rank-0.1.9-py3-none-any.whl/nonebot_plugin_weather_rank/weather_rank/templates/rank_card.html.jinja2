<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rank Card</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <style type="text/css">
        @font-face {
            font-family: "MeiWeiTi";
            src: url("./fonts/miaozi-meiweiti-2.ttf") format("truetype");
        }

        @font-face {
            font-family: "ComicSannsMonoNF";
            src: url("./fonts/ComicShannsMonoNerdFont-Regular.otf") format("truetype");
        }

        @font-face {
            font-family: "CustomEN";
            src: url({{ custom_en }});
        }

        @font-face {
            font-family: "CustomZH";
            src: url({{ custom_zh }});
        }

        .container {
            width: 432px;
            height: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #fbe9e7;
            border-radius: 8px;
            background: linear-gradient(to bottom, #ff9e80, #ff5722);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .title {
            width: 400px;
            height: 40px;
            margin: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to right, #ff9e80, #ff5722, #ff9e80);
            font-family: {{ "CustomEN" if custom_en != custom_font_dir else "ComicSannsMonoNF" }}, {{ "CustomZH" if custom_zh != custom_font_dir else "MeiWeiTi" }};
            font-size: 24px;
            font-weight: bold;
        }

        .card {
            width: 400px;
            height: 60px;
            margin-bottom: 16px;
            background-color: #f4511e;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: {{ "CustomEN" if custom_en != custom_font_dir else "ComicSannsMonoNF" }}, {{ "CustomZH" if custom_zh != custom_font_dir else "MeiWeiTi" }};
            font-size: 16px;
            color: white;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .card-1 {
            width: 400px;
            height: 60px;
            margin-bottom: 16px;
            background-color: #ff7043;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: {{ "CustomEN" if custom_en != custom_font_dir else "ComicSannsMonoNF" }}, {{ "CustomZH" if custom_zh != custom_font_dir else "MeiWeiTi" }};
            font-size: 16px;
            color: white;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .material1 {
            color: #ffd700;
        }

        .material2 {
            color: #c0c0c0;
        }

        .material3 {
            color: #cd7f32;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="title">{{ mode }}排行榜</div>
        {% for data in datas %}
        {% if loop.index <= 3 %} <div class="card">
            <span class="material-symbols-outlined material{{ loop.index }}">editor_choice</span>
            <span>{{ loop.index }} {{ data.name }} {{ data.temp }}°C</span>
    </div>
    {% else %}
    <div class="card-1">
        <span>{{ loop.index }} {{ data.name }} {{ data.temp }}°C</span>
    </div>
    {% endif %}
    {% endfor %}
    </div>
    </div>
</body>
